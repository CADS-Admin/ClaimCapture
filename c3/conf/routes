# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /cookies                    controllers.Application.cookies


#Sections
GET     /sprint-0/:id               controllers.ClaimController.presenter(id: String)
POST    /sprint-0/:id               controllers.ClaimController.command(id:String)

#Allowance
GET     /sections/allowance          controllers.CarersAllowance.present

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
