# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /cookies                    controllers.Application.cookies


#Sections
#GET     /sections/:id               controllers.ClaimController.presenter(id: String)
#POST    /sections/:id               controllers.ClaimController.command(id:String)

#Allowance
GET     /sections/allowance/benefits  controllers.CarersAllowance.benefits
POST    /sections/allowance/benefits  controllers.CarersAllowance.benefitsSubmit

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
