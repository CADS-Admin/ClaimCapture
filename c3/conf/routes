# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                               controllers.Application.index
GET     /claim-notes                                                    controllers.ClaimNotes.notes

# Cache Timeout
GET         /timeout                                                                controllers.Application.timeout
GET         /circs-timeout                                                          controllers.Application.circsTimeout

# Unrecoverable error
GET         /error/:key                                                             controllers.Application.error(key:String)

# Claim submission
GET         /submit                                                                 @controllers.submission.ClaimSubmissionController.submit
GET         /circs-submit                                                           @controllers.circs.submission.ChangeOfCircsSubmissionController.submit

# Thank you
GET         /thankyou/:txnId                                                        controllers.ThankYou.present(txnId: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                           controllers.Assets.at(path="/public", file)

