# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.Application.index

# Allowance
###############
GET     /allowance/benefits                             controllers.CarersAllowance.benefits
POST    /allowance/benefits                             controllers.CarersAllowance.benefitsSubmit

GET     /allowance/hours                                controllers.CarersAllowance.hours
POST    /allowance/hours                                controllers.CarersAllowance.hoursSubmit

GET     /allowance/livesInGB                            controllers.CarersAllowance.livesInGB
POST    /allowance/livesInGB                            controllers.CarersAllowance.livesInGBSubmit

GET     /allowance/over16                               controllers.CarersAllowance.over16
POST    /allowance/over16                               controllers.CarersAllowance.over16Submit

GET     /allowance/approve                              controllers.CarersAllowance.approve
POST    /allowance/approve                              controllers.CarersAllowance.approveSubmit

