# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       controllers.Application.index
->         /                       claim.Routes


# Cache Timeout
GET        /timeout                controllers.Application.timeout
GET        /circs-timeout          controllers.Application.circsTimeout

# Unrecoverable error
GET        /error                  controllers.Application.error

# Claim submission
GET        /submit                 @controllers.submission.SubmissionController.submit

GET        /circumstancesSubmit   @controllers.submission.SubmissionController.circumstancesSubmit

# Thank you
GET        /thankyou/:txnId        controllers.ThankYou.present(txnId: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)

# Circumstances
->         /circumstances          circs.Routes
