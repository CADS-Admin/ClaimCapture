# Care You Provide
###############
GET     /careYouProvide/theirPersonalDetails            controllers.CareYouProvide.theirPersonalDetails
POST    /careYouProvide/theirPersonalDetails            controllers.CareYouProvide.theirPersonalDetailsSubmit

GET     /careYouProvide/theirContactDetails             controllers.CareYouProvide.theirContactDetails
POST    /careYouProvide/theirContactDetails             controllers.CareYouProvide.theirContactDetailsSubmit

GET     /careYouProvide/moreAboutThePerson              controllers.CareYouProvide.moreAboutThePerson
POST    /careYouProvide/moreAboutThePerson              controllers.CareYouProvide.moreAboutThePersonSubmit

GET     /careYouProvide/previousCarerPersonalDetails    controllers.CareYouProvide.previousCarerPersonalDetails
POST    /careYouProvide/previousCarerPersonalDetails    controllers.CareYouProvide.previousCarerPersonalDetailsSubmit

GET     /careYouProvide/previousCarerContactDetails     controllers.CareYouProvide.previousCarerContactDetails
POST     /careYouProvide/previousCarerContactDetails    controllers.CareYouProvide.previousCarerContactDetailsSubmit

GET     /careYouProvide/representativesForPerson        controllers.CareYouProvide.representativesForPerson
POST    /careYouProvide/representativesForPerson        controllers.CareYouProvide.representativesForPersonSubmit

GET     /careYouProvide/oneWhoPaysPersonalDetails       controllers.CareYouProvide.oneWhoPaysPersonalDetails
POST    /careYouProvide/oneWhoPaysPersonalDetails       controllers.CareYouProvide.oneWhoPaysPersonalDetailsSubmit

GET     /careYouProvide/moreAboutTheCare                controllers.CareYouProvide.moreAboutTheCare
POST    /careYouProvide/moreAboutTheCare                controllers.CareYouProvide.moreAboutTheCareSubmit

GET     /careYouProvide/contactDetailsOfPayingPerson    controllers.CareYouProvide.contactDetailsOfPayingPerson
POST    /careYouProvide/contactDetailsOfPayingPerson    controllers.CareYouProvide.contactDetailsOfPayingPersonSubmit

GET     /careYouProvide/hasBreaks                       controllers.CareYouProvide.hasBreaks
POST    /careYouProvide/hasBreaks                       controllers.CareYouProvide.hasBreaksSubmit

GET     /careYouProvide/breaksInCare                    controllers.CareYouProvide.breaksInCare
POST    /careYouProvide/breaksInCare                    controllers.CareYouProvide.breaksInCareSubmit
GET     /careYouProvide/breaksInCare/:id                controllers.CareYouProvide.break(id: String)
POST    /careYouProvide/break                           controllers.CareYouProvide.breakSubmit
DELETE  /careYouProvide/breaksInCare/:id                controllers.CareYouProvide.deleteBreak(id: String)

GET     /careYouProvide/completed                       controllers.CareYouProvide.completed

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                   controllers.Assets.at(path="/public", file)

# Temporary submission service
GET     /submit                                         controllers.Submission.submit
POST    /submit                                         controllers.SubmissionService.submit
